<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    <changeSet author="bmandel" id="1542747082248-1">
        <createTable tableName="DESCRIPTOR" schemaName="ALERT">
            <column autoIncrement="true" name="ID" type="BIGINT(19)">
                <constraints primaryKey="true" primaryKeyName="DESCRIPTOR_KEY"/>
            </column>
            <column name="DESCRIPTOR_NAME" type="VARCHAR(255)"/>
            <column name="DESCRIPTOR_TYPE" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet author="bmandel" id="1542747082248-2">
        <createTable tableName="FIELD" schemaName="ALERT">
            <column autoIncrement="true" name="ID" type="BIGINT(19)">
                <constraints primaryKey="true" primaryKeyName="FIELD_KEY"/>
            </column>
            <column name="DESCRIPTOR_ID" type="BIGINT(19)"/>
            <column name="KEY" type="VARCHAR(255)"/>
            <column name="SECURE" type="BOOLEAN(1)"/>
        </createTable>
    </changeSet>
    <changeSet author="bmandel" id="1542747082248-3">
        <createTable tableName="CONFIGURATION" schemaName="ALERT">
            <column autoIncrement="true" name="ID" type="BIGINT(19)">
                <constraints primaryKey="true" primaryKeyName="CONFIGURATION_KEY"/>
            </column>
            <column name="DESCRIPTOR_ID" type="BIGINT(19)"/>
        </createTable>
    </changeSet>
    <changeSet author="bmandel" id="1542747082248-4">
        <createTable tableName="VALUE" schemaName="ALERT">
            <column autoIncrement="true" name="ID" type="BIGINT(19)">
                <constraints primaryKey="true" primaryKeyName="VALUE_KEY"/>
            </column>
            <column name="FIELD_ID" type="BIGINT(19)"/>
            <column name="CONFIGURATION_ID" type="BIGINT(19)"/>
            <column name="VALUE" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>